.wrap {
  width: 100%;
  height: 100vh;
  background: #efeff4;
}

.wrap .top {
  width: 100%;
  height: 80px;
  border-top: 2px solid #fff;
}

.wrap .top .top-left {
  width: 30%;
  height: 80px;
  float: left;
  position: relative;
}

.circle {
  width: 3rem;
  height: 3rem;
  position: absolute;
  top: 20%;
  left: 20%;
  
  border-radius: 50%;
}
.circle image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.wrap .top .top-right {
  width: 70%;
  height: 80px;
  float: right;
}

.userName{
 line-height: 80px;
  font-size: 15px;
}
